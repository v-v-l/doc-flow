{
  "knowledge_system": "obsidian",
  "output_format": "markdown",
  "detection_keywords": [
    "add", "new", "create", "implement", "feat",
    "service", "controller", "component", "module", 
    "integration", "api", "database", "auth", "fix"
  ],
  "ignore_keywords": [
    "typo", "format", "lint", "style", "comment"
  ],
  "naming_conventions": {
    "components": "PascalCase",
    "modules": "kebab-case",
    "systems": "Title Case",
    "flows": "Process-based"
  },
  "virtual_folders": {
    "architecture": "architecture/",
    "components": "architecture/components/",
    "modules": "architecture/modules/",
    "integrations": "architecture/integrations/",
    "data_flow": "architecture/data-flow/",
    "infrastructure": "architecture/infrastructure/"
  },
  "tags": {
    "foundational": ["foundational", "system-design"],
    "components": ["component", "service"],
    "modules": ["module", "core"],
    "integrations": ["integration", "external"]
  },
  "auto_capture": true,
  "include_file_analysis": true,
  "min_files_changed": 1,
  "analysis_patterns": {
    "components": ["Service", "Controller", "Component", "Repository", "Handler", "Manager", "Provider"],
    "configs": ["config", "settings", "env"],
    "tests": ["test", "spec"],
    "docs": ["md", "txt", "doc"]
  },
  "knowledge_system_config": {
    "obsidian": {
      "vault_path": "",
      "use_wikilinks": true,
      "avoid_hash_in_titles": true
    },
    "notion": {
      "database_id": "",
      "api_key": ""
    },
    "custom": {
      "api_endpoint": "",
      "auth_token": ""
    }
  }
}